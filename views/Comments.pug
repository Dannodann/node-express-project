extends  ./layouts/index.pug

block content
    main.container.mt-5 
        h1.text-center.mt-5  #{page}

        blockquote.text-center REVIEWS FROM OUR CUSTOMERS
        include ./layouts/blockComments

        .row 
            
            .col-md-12
                h2.d-blovk.w-100.text-center Add a comment

                if(errors)
                    each error in errors
                        .alert.col.alert-danger.text-center= error.comment
                


            .row.justify-content-center.col
                .col-md-8
                    form(action="" method="POST")
                        .form-group
                            label(for="name") Name
                            input#name(type="text", placeholder="Your name", name="name", class="form-control", value= name)
                        .form-group
                            label(for="email") Email
                            input#name(type="text", placeholder="Your Email", name="email", class="form-control", value= email)
                        .form-group
                            label(for="comment") Comment
                            textarea#comment(name="comment", placeholder="Your comment", rows="3", class="form-control")= comment

                        input.btn.btn-success.btn-block(type="submit",value="send")